@*Tuple<ExhibitList, TotalPages, CurrentIndex>*@
@model Tuple<IEnumerable<DiscoveryCenter.Models.Exhibit>, int, int>

@{
    ViewBag.Title = "Admin Console - Exhibits";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<div class="col-md-offset-2 col-md-8 panel panel-default">
    <div class="panel-body ">
        <h2>Exhibits</h2>
        <div class="clearfix">
            <div class="col-md-4" style="padding-left:0px">
                <p>
                    <a class="btn btn-primary" href="@Url.Action("Create","Exhibits")" id="addItem">
                        <i class='glyphicon glyphicon-plus'></i> Create New Exhibit
                    </a>
                </p>
            </div>
            <div class="col-md-8 selection-buttons " style="padding-right:0px">
                <div class="btn-group pull-right">
                    <a id="editExhibit" class="btn btn-default" type="button" href="@Url.Action("Edit", "Exhibits", new { id = "" })">
                        <span class="glyphicon glyphicon-edit"></span> Edit
                    </a>
                    <a id="deleteExhibit" class="btn btn-danger" type="button" href="@Url.Action("Delete", "Exhibits", new { id = ""})">
                        <span class="glyphicon glyphicon-remove"></span> Delete
                    </a>
                </div>
            </div>
        </div>

        <ul>
                <li class="header clearfix">
                    <div class="col-md-5">
                        <span>Name</span>
                    </div>
                    <div class="col-md-3">
                        <span>Create Date</span>
                    </div>
                    <div class="col-md-4">
                        <span>Last Modified Date</span>
                    </div>
                </li>
        </ul>
        <ul class="indexSelectableList">

            @foreach (var item in Model.Item1)
            {
                <li class="ui-widget-content clearfix text-center" id="selectRow_@item.Id" style="cursor:pointer">
                    @Html.HiddenFor(modelItem => item.Id, new { @class = "id" })
                    <div class="col-md-5">
                        <img style="float:left" src="@item.ImageLocation" height="64" width="64">
                        <span>@Html.DisplayFor(modelItem => item.Name)</span>
                    </div>
                    <div class="col-md-3">
                        <span>@Html.DisplayFor(modelItem => item.CreateDate)</span>
                    </div>
                    <div class="col-md-4">
                        <span>@Html.DisplayFor(modelItem => item.LastModifiedDate)</span>
                    </div>
                </li>
            }
        </ul>

        <center>
            <ul class="list-inline">
                @{
                    <li><a class="btn btn-primary" href="?id=@(Model.Item3 - 1)"><</a></li>
                    for (int i = 0; i < Model.Item2; i++)
                    {
                        if (i != Model.Item3) 
                        { 
                            <li><a class="btn btn-primary" href="?id=@i">@i</a></li>
                        }
                        else
                        {
                            <li><a class="btn btn-info" href="?id=@i">@i</a></li>
                        }
                    }
                    <li><a class="btn btn-primary" href="?id=@(Model.Item3 + 1)">></a></li>
                }
            </ul>
        </center>
    </div>
</div>

@section scripts
{
    <script>
        $(".indexSelectableList").selectable({
            stop:function(event, ui){
                $(event.target).children('.ui-selected').not(':first').removeClass('ui-selected');
                refreshButtons(event.target);
            }
        });

        $(document).ready(refreshButtons(null));

        function refreshButtons(target)
        {
            if (target != null)
                var selected = $(target).children('.ui-selected').first();
            else
                var selected = null;

            if (selected != null) {
                console.log(selected);
                var id = $(selected).find("input.id").first().val();
                console.log(id);
                $(".selection-buttons a").each(function (index, ele) {
                    $(ele).attr('href', function (i, a) {

                        if (/id=[0-9]*&/.test(a))
                            return a.replace(/id=[0-9]*&/ig, "id=" + id);
                        else {
                            a = a.replace(/\?.*$/, "");
                            return a + "?id=" + id;
                        }
                    });
                    $(ele).removeAttr('disabled');
                    console.log(ele);
                });

            }
            else
            {
                $(".selection-buttons a").each(function (index, ele) {
                    console.log(ele);
                    $(ele).attr("disabled", "disabled");
                });
            }

        }
    </script>
}