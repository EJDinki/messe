<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Admin")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/jqplot")
    @Scripts.Render("~/bundles/jqplot")  
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery_ui")

</head>
<body>
    <div class="navbar navbar-inverse  navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @if (!Request.IsAuthenticated)
                { 
                @*@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "navbar-brand" })*@
                    <a href="~/Account/Login" class="navbar-brand" id="loginLink"><span class="glyphicon glyphicon-log-in"></span> Login In</a>
                }
                
            </div>
            <div class="navbar-right">

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/Admin")
    @RenderSection("scripts", required: false)
</body>
</html>
