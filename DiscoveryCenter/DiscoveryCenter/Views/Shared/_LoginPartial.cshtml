
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Surveys", "Index", "Creation", null, new { @class = "navbar-brand" })
            </li>

            <li>
                @Html.ActionLink("Exhibits", "Index", "Exhibits", null, new { @class = "navbar-brand" })
            </li>
            <li>
                @Html.ActionLink("Themes", "Index", "Theme", null, new { @class = "navbar-brand" })
            </li>
            <li>
                @Html.ActionLink("Multimedia", "Index", "Images", null, new { @class = "navbar-brand" })
            </li>
            <li>
                @Html.ActionLink("Help", "Index", "Help", null, new { @class = "navbar-brand" })
            </li>
            <li>
                @Html.ActionLink("Settings", "Settings", "Account", null, new { @class = "navbar-brand" })
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="navbar-brand">Log off</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Surveys", "Index", "Creation", null, new { @class = "navbar-brand" })
        </li>
    </ul>
}
