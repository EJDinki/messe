
@model Tuple<int,DiscoveryCenter.Models.Question>

@{
    string guid = Guid.NewGuid().ToString();
}

<li class="panel panel-info">
    <div class="panel-heading">
        Question <span class="IndexInSurvey">@Model.Item2.IndexInSurvey</span>
        <div class="pull-right">
            <a href="javascript:void(0)" class="deleteRow btn-sm btn-danger" onclick="$(this).closest('li').remove(); NoQuestions(); UpdatePanels();">
                <span class="glyphicon glyphicon-remove"></span>
                Delete Question
            </a>
        </div>
    </div>
    <div class="panel-body">

        @Html.Hidden(String.Format("Questions[{0}].Id", guid), Model.Item2.Id)
        @Html.Hidden(String.Format("Questions[{0}].IndexInSurvey", guid), Model.Item2.IndexInSurvey, new { @class = "IndexInSurvey" })

        <div class="form-group">
            @Html.LabelFor(m => m.Item2.Text, new { @class = "col-md-2 control-label" })
            <div class="col-md-8">
                @Html.TextBox(String.Format("Questions[{0}].Text", guid), Model.Item2.Text, new { @class = "form-control", @style = "width:100%;max-width:none;resize:none;" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Item2.Type, new { @class = "col-md-2 control-label" })
            <div class="col-md-8 ">
                @Html.EnumDropDownListFor(m => m.Item2.Type, new {
                    Name = String.Format("Questions[{0}].Type", guid),
                    @class = "form-control type",
                    @onchange = "UpdateChoices(this);"
           })
            </div>
        </div>
        <div class="Choices">
             @Html.Partial("_ChoicesInputGroup", Model.Item2)
        </div>
    </div>
</li>
