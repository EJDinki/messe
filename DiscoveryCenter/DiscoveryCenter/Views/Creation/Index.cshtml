@model IEnumerable<DiscoveryCenter.Models.Survey>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class=" col-md-offset-2 col-md-8 panel panel-default">
    <div class="panel-body ">
        <h2>Surveys</h2>
        <p>
            <a class="btn btn-success" href="/Creation/Create" id="addItem">
                <i class='glyphicon glyphicon-plus'></i> Create New Survey
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default", @type = "button" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", @type = "button" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>